var subpath = express();

app.use("{{{basePath}}}", subpath);

swagger.setAppHandler(subpath);
{{/basePath}}
{{^basePath}}
swagger.setAppHandler(app);
{{/basePath}}

swagger.configureSwaggerPaths("", "api-docs", "")

var models = require("./{{modelPackage}}/models.js");

