swagger.addModels(models)
  {{#apiInfo}}{{#apis}}{{#operations}}{{#operation}}.add{{httpMethod}}({{classname}}.{{nickname}}){{/operation}}{{/operations}}
  {{/apis}}{{/apiInfo}};

// configures the app
swagger.configure("http://localhost:8002{{basePath}}", "0.1");

